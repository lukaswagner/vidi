{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2019",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "WebWorker",
            "ES2019"
        ],
        "baseUrl": ".",
        "paths": {
            "shared/*": [
                "../../shared/*"
            ],
            "frontend/*": [
                "../../frontend/*"
            ],
        }
    },
    "include": [
        "./*.ts",
        "../../typings/*.ts",
        "../../shared/**/*.ts"
    ]
}
