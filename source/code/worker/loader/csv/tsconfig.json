{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2021",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "WebWorker",
            "ES2021"
        ],
        "baseUrl": ".",
        "paths": {
            "shared/*": [
                "../../../shared/*"
            ],
            "frontend/*": [
                "../../../frontend/*"
            ],
        }
    },
    "include": [
        "./*.ts",
        "../../../typings/*.ts",
        "../../../shared/**/*.ts"
    ]
}
