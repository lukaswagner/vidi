{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2020",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "ES2020"
        ]
    },
    "include": [
        "source/code/frontend/*.ts",
        "source/code/frontend/**/*.ts",
        "source/code/typings/*.ts",
        "source/code/shared/**/*.ts"
    ]
}