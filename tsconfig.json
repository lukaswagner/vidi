{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2021",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "baseUrl": ".",
        "paths": {
            "shared/*": [
                "source/code/shared/*"
            ],
            "frontend/*": [
                "source/code/frontend/*"
            ],
            "worker/*": [
                "source/code/worker/*"
            ],
            "loader/*": [
                "source/code/worker/loader/*"
            ],
        }
    },
    "include": [
        "source/code/frontend/*.ts",
        "source/code/frontend/**/*.ts",
        "source/code/typings/*.ts",
        "source/code/shared/**/*.ts"
    ]
}
